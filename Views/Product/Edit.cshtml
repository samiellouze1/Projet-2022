@using Projet_2022.Models.ViewModels

@{
    ViewData["Title"]="Edit Product";
}
@model ProductVM;
<div class="row text">
    <div style="padding-left:250px;" class="col-md-8 offset-2">
        <p>
            <h1>Edit a Product</h1>
        </p>
        <div  class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group text-center">
                        <img id="PrincipalImage"  class="border-info rounded-circle" style="max-width: 150px" />
                    </div>
                    <div class="form-group">
                        <label asp-for="PrincipalImage" class="control-label"></label>
                        <input asp-for="PrincipalImage" placeholder=@Model.PrincipalImage class="form-control" />
                        <span asp-validation-for="PrincipalImage" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" placeholder=@Model.Name class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Sku" class="control-label"></label>
                        <input asp-for="Sku" placeholder=@Model.Sku class="form-control" />
                        <span asp-validation-for="Sku" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Slug" class="control-label"></label>
                        <input asp-for="Slug" placeholder=@Model.Slug class="form-control" />
                        <span asp-validation-for="Slug" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" placeholder=@Model.Description class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Ratings" class="control-label"></label>
                        <input asp-for="Ratings" placeholder=@Model.Ratings class="form-control" />
                        <span asp-validation-for="Ratings" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" placeholder=@Model.Price class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TotalSales" class="control-label"></label>
                        <input asp-for="TotalSales" placeholder=@Model.TotalSales class="form-control" />
                        <span asp-validation-for="TotalSales" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StockStatus" class="control-label"></label>
                        <input asp-for="StockStatus" placeholder=@Model.StockStatus class="form-control" />
                        <span asp-validation-for="StockStatus" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IdCategory" class="control-label"></label>
                        <input asp-for="IdCategory" placeholder=@Model.IdCategory placeholder="" class="form-control" />
                        <span asp-validation-for="IdCategory" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IdBrand" class="control-label"></label>
                        <input asp-for="IdBrand" placeholder=@Model.IdBrand type="datetime" placeholder="" class="form-control" />
                        <span asp-validation-for="IdBrand" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Edit" class="btn btn-outline-success float-right" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('PrincipalImage');
            output.src = $("#PrincipalImage").val();
        })
        $("#PincipalImage").on("change", function () {
            var output = document.getElementById('PrincipalImage');
            output.src = $(this).val();
        })
    </script>
}
